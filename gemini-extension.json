{
  "name": "post-bridge",
  "version": "0.1.2",
  "settings": [
    {
      "name": "post-bridge API key",
      "description": "API key for accessing the post-bridge API",
      "envVar": "POST_BRIDGE_API_TOKEN"
    }
  ],
  "mcpServers": {
    "post-bridge": {
      "command": "node",
      "args": ["${extensionPath}${/}dist${/}cli.js"],
      "cwd": "${extensionPath}"
    }
  }
}
