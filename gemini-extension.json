{
  "name": "post-bridge",
  "version": "0.1.6",
  "settings": [
    {
      "name": "post-bridge API key",
      "description": "API key for accessing the post-bridge API",
      "envVar": "POST_BRIDGE_API_TOKEN"
    }
  ],
  "mcpServers": {
    "post-bridge-mcp": {
      "command": "node",
      "args": ["${extensionPath}${/}dist${/}post-bridge-mcp-cli.js"],
      "cwd": "${extensionPath}",
      "timeout": 60000
    }
  }
}
